#include <SFML/Graphics.hpp>
#include <iostream>
#include <iostream>
#include <ctime>

int main(){
	std::srand(time(NULL));
    // Cria a janela

    sf::RenderWindow window(sf::VideoMode(400, 300), "Bola Branca - SFML");



    // Cria a "bola" (um c√≠rculo)

    //Bola Branca
    sf::CircleShape circleWhite(50.0f); // raio de 30 pixels

    circleWhite.setFillColor(sf::Color::White);

    circleWhite.setPosition(170, 110); // centraliza aproximadamente (janela 400x300)

    // Loop principal
    sf::Clock fpsClock;
    window.setFramerateLimit(100);

    while (window.isOpen()){

        sf::Event event;

        while (window.pollEvent(event))

        {

            if (event.type == sf::Event::Closed)

                window.close();

        }

        window.clear(sf::Color::Black); // fundo preto

        window.draw(circleWhite);

        window.display();

    }



    return 0;
}
