#include <SFML/Graphics.hpp>

int main(int argc, char **argv) {
    sf::RenderWindow renderWindow(sf::VideoMode(640, 240), "Hello cruel World");
    sf::Font font;

    // Verifica se a fonte foi carregada corretamente
    if (!font.loadFromFile("x-files.ttf")) {
        return -1;
    }

    sf::Text text("Hello World", font, 96);
    text.setColor(sf::Color::Red); // Usando setFillColor() no lugar de setColor()

    // Centralizando o texto na janela
    sf::FloatRect bounds(text.getLocalBounds());
    text.setOrigin(bounds.left + bounds.width / 2, bounds.top + bounds.height / 2);
    text.setPosition(renderWindow.getSize().x / 2, renderWindow.getSize().y / 2);

    while (renderWindow.isOpen()) {
        sf::Event event;
        while (renderWindow.pollEvent(event)) {
            if (event.type == sf::Event::Closed)
                renderWindow.close();
        }

        renderWindow.clear(sf::Color::White);
        renderWindow.draw(text);
        renderWindow.display();
    }

    return 0;
}

